import java.util.*;

public class r46 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        ArrayList<String> s = new ArrayList<String>();
        boolean running = true;

        while (running) {
            System.out.println("\n--- Menu ---");
            System.out.println("1. Add element");
            System.out.println("2. Update element");
            System.out.println("3. Display full list");
            System.out.println("4. Print elements one by one");
            System.out.println("5. Exit");
            System.out.print("Enter your choice: ");
            
            int choice = sc.nextInt();
            sc.nextLine(); // consume newline

            switch (choice) {
                case 1:
                    System.out.print("Enter string to add: ");
                    String toAdd = sc.nextLine();
                    s.add(toAdd);
                    System.out.println("Added: " + toAdd);
                    break;

                case 2:
                    System.out.print("Enter index to update: ");
                    int index = sc.nextInt();
                    sc.nextLine(); // consume newline
                    if (index >= 0 && index < s.size()) {
                        System.out.print("Enter new string: ");
                        String newValue = sc.nextLine();
                        s.set(index, newValue);
                        System.out.println("Updated index " + index + " to: " + newValue);
                    } else {
                        System.out.println("Invalid index!");
                    }
                    break;

                case 3:
                    System.out.println("Current list: " + s);
                    break;

                case 4:
                    System.out.println("Printing elements one by one:");
                    for (String str : s) {
                        System.out.println(str);
                    }
                    break;

                case 5:
                    running = false;
                    System.out.println("Exiting program.");
                    break;

                default:
                    System.out.println("Invalid choice. Please try again.");
            }
        }

        sc.close();
    }
}
